{
	"id": "surveillance.station.homey",
	"sdk": 2,
  "brandColor": "#272a5d",
	"name": {
		"en": "Synology Surveillance Station",
		"nl": "Synology Surveillance Station"
	},
	"tags": {
		"en": [ "synology", "surveillance station", "security" ],
		"nl": [ "synology", "surveillance station", "beveiliging" ]
	},
	"version": "1.1.2",
	"compatibility": ">=2.2.0",
	"author": {
		"name": "Jelger Haanstra",
		"email": "homey@solidewebservices.com",
		"website": "https://github.com/jghaanstra/surveillance.station.homey"
	},
	"contributing": {
		"donate": {
			"paypal": {
				"username": "jghaanstra"
			}
		}
	},
	"bugs": {
		"url": "https://github.com/jghaanstra/surveillance.station.homey/issues"
	},
  "homeyCommunityTopicId": 1396,
	"images": {
		"large": "./assets/images/large.jpg",
		"small": "./assets/images/small.jpg"
	},
	"category": "security",
	"description": {
		"en": "Connect your Homey with Synology Surveillance Station",
		"nl": "Verbind je Homey met Synology Surveillance Station"
	},
	"dependencies": {
		"net": "*"
	},
	"drivers": [
		{
			"id": "surveillancestation",
			"name": {
				"en": "Surveillance Station",
				"nl": "Surveillance Station"
			},
			"images": {
				"large": "drivers/surveillancestation/assets/images/large.jpg",
				"small": "drivers/surveillancestation/assets/images/small.jpg"
			},
			"class": "other",
			"capabilities": [
			],
      "pair": [
				{
					"id": "start"
				}
			],
      "settings": [
				{
					"type": "group",
					"label": {
						"en": "Surveillance Station Settings",
						"nl": "Surveillance Station instellingen"
					},
					"children": [
						{
							"id": "address",
							"type": "text",
							"value": "0.0.0.0",
							"label": {
								"en": "IP Address",
								"nl": "IP adres"
							}
						},
            {
							"id": "port",
							"type": "number",
							"value": 5001,
							"step": 1,
							"label": {
								"en": "Port",
								"nl": "Poort"
							}
						},
						{
							"id": "username",
							"type": "text",
							"value": "",
							"label": {
								"en": "Username",
								"nl": "Gebruikersnaam"
							}
						},
						{
							"id": "password",
							"type": "password",
							"value": "",
							"label": {
								"en": "Password",
								"nl": "Wachtwoord"
							}
						}
					]
				}
			]
		}
	],
  "flow": {
    "triggers": [
      {
		    "id": "motionDetected",
				"title": {
					"en": "Motion Detected",
					"nl": "Beweging gedetecteerd"
				},
        "tokens": [
          {
            "name": "camera",
            "type": "string",
            "title": {
              "en": "Camera",
              "nl": "Camera"
            },
            "example": "DoorBird"
          }
        ]
	    }
    ],
    "conditions": [
      {
				"id": "cameraEnabled",
				"title": {
					"en": "Camera !{{is|is not}} enabled",
					"nl": "Camera !{{is|is niet}} ingeschakeld"
				},
				"args": [
          {
            "name": "camera",
            "type": "autocomplete",
            "placeholder": {
              "en": "Select Camera",
              "nl": "Selecteer camera"
            }
          },
					{
						"name": "device",
						"type": "device",
						"placeholder": {
							"en": "Select Surveillance Station",
							"nl": "Selecteer Surveillance Station"
						},
						"filter": "driver_id=surveillancestation"
					}
				]
			},
      {
				"id": "cameraRecording",
				"title": {
					"en": "Camera !{{is|is not}} recording",
					"nl": "Camera !{{is|is niet}} aan het opnemen"
				},
				"args": [
          {
            "name": "camera",
            "type": "autocomplete",
            "placeholder": {
              "en": "Select Camera",
              "nl": "Selecteer camera"
            }
          },
					{
						"name": "device",
						"type": "device",
						"placeholder": {
							"en": "Select Surveillance Station",
							"nl": "Selecteer Surveillance Station"
						},
						"filter": "driver_id=surveillancestation"
					}
				]
			}
    ],
    "actions": [
      {
				"id": "setHomeMode",
				"title": {
					"en": "Set Home Mode",
					"nl": "Home Mode instellen"
				},
				"args": [
          {
            "name": "homemode",
            "type": "dropdown",
            "values": [
              {
                "id": "home",
                "label": {
                  "en": "Home",
                  "nl": "Thuis"
                }
              },
              {
                "id": "away",
                "label": {
                  "en": "Away",
                  "nl": "Weg"
                }
              }
            ]
          },
          {
						"name": "device",
						"type": "device",
            "placeholder": {
							"en": "Select Surveillance Station",
							"nl": "Selecteer Surveillance Station"
						},
						"filter": "driver_id=surveillancestation"
          }
				]
			},
		{
				"id": "setMotionState",
				"title": {
					"en": "Set Motion Detection State",
					"nl": "Bewegingsdetectie status instellen"
				},
				"args": [
				{
            "name": "camera",
            "type": "autocomplete",
            "placeholder": {
              "en": "Select Camera",
              "nl": "Selecteer camera"
            }
          },
          {
            "name": "motionstate",
            "type": "dropdown",
            "values": [
              {
                "id": "disabled",
                "label": {
                  "en": "Disabled",
                  "nl": "Uitgeschakeld"
                }
              },
              {
                "id": "enabled",
                "label": {
                  "en": "Enabled",
                  "nl": "Ingeschakeld"
                }
              }
            ]
          },
          {
						"name": "device",
						"type": "device",
            "placeholder": {
							"en": "Select Surveillance Station",
							"nl": "Selecteer Surveillance Station"
						},
						"filter": "driver_id=surveillancestation"
          }
				]
			},
      {
				"id": "switchCameraState",
				"title": {
					"en": "Switch Camera State",
					"nl": "Camera status schakelen"
				},
				"args": [
          {
            "name": "camera",
            "type": "autocomplete",
            "placeholder": {
              "en": "Select Camera",
              "nl": "Selecteer camera"
            }
          },
          {
            "name": "state",
            "type": "dropdown",
            "values": [
              {
                "id": "Enable",
                "label": {
                  "en": "Enable",
                  "nl": "Inschakelen"
                }
              },
              {
                "id": "Disable",
                "label": {
                  "en": "Disable",
                  "nl": "Uitschakelen"
                }
              }
            ]
          },
          {
						"name": "device",
						"type": "device",
            "placeholder": {
							"en": "Select Surveillance Station",
							"nl": "Selecteer Surveillance Station"
						},
						"filter": "driver_id=surveillancestation"
          }
				]
			},
      {
				"id": "emailSnapshot",
				"title": {
					"en": "Email Snapshot",
					"nl": "Email snaphot"
				},
				"args": [
          {
            "name": "camera",
            "type": "autocomplete",
            "placeholder": {
              "en": "Select Camera",
              "nl": "Selecteer camera"
            }
          },
          {
            "name": "mailto",
            "type": "text",
            "placeholder": {
              "en": "Send to",
              "nl": "Stuur aan"
            }
          },
          {
						"name": "device",
						"type": "device",
            "placeholder": {
							"en": "Select Surveillance Station",
							"nl": "Selecteer Surveillance Station"
						},
						"filter": "driver_id=surveillancestation"
          }
				]
			},
      {
				"id": "saveSnapshot",
				"title": {
					"en": "Save Snapshot On Storage",
					"nl": "Opslaan snapshot op storage"
				},
				"args": [
          {
            "name": "camera",
            "type": "autocomplete",
            "placeholder": {
              "en": "Select Camera",
              "nl": "Selecteer camera"
            }
          },
          {
						"name": "device",
						"type": "device",
            "placeholder": {
							"en": "Select Surveillance Station",
							"nl": "Selecteer Surveillance Station"
						},
						"filter": "driver_id=surveillancestation"
          }
				]
			},
      {
				"id": "recordVideo",
				"title": {
					"en": "Manual Video Recording",
					"nl": "Handmatige video opname"
				},
				"args": [
          {
            "name": "camera",
            "type": "autocomplete",
            "placeholder": {
              "en": "Select Camera",
              "nl": "Selecteer camera"
            }
          },
          {
            "name": "action",
            "type": "dropdown",
            "values": [
              {
                "id": "start",
                "label": {
                  "en": "Start",
                  "nl": "Start"
                }
              },
              {
                "id": "stop",
                "label": {
                  "en": "Stop",
                  "nl": "Stop"
                }
              }
            ]
          },
          {
						"name": "device",
						"type": "device",
            "placeholder": {
							"en": "Select Surveillance Station",
							"nl": "Selecteer Surveillance Station"
						},
						"filter": "driver_id=surveillancestation"
          }
				]
			}
    ]
  }
}
